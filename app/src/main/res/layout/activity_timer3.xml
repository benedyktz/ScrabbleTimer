<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.benedyktgmail.ziolkowski.scrabbletimer.Timer">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SettingsActivity"
        android:id="@+id/fullscreen_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:onClick="fieldClick"
                android:gravity="center"
                android:id="@+id/field1"
                android:rotation="180">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timerVal"
                    android:textAlignment="center"
                    android:textSize="60dp"
                    android:background="@color/fieldBackground"
                    android:id="@+id/timerValue"
                    android:layout_weight="5"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/timerValue"
                    android:id="@id/playerName1"/>

            </RelativeLayout>
            <!--<View-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"/>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:onClick="fieldClick"
                android:gravity="center"
                android:id="@+id/field2"
                android:rotation="180">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timerVal"
                    android:textAlignment="center"
                    android:textSize="60dp"
                    android:background="@color/fieldBackground"
                    android:id="@+id/timerValue2"
                    android:layout_weight="5"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/timerValue2"
                    android:id="@id/playerName2"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="settings"
                    android:orientation="horizontal"
                    android:background="@drawable/radius_rectangle"
                    android:id="@+id/settingsButtonTimer"
                    android:gravity="center"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_settings_black_24dp"
                        android:contentDescription="resetButton"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="info"
                    android:orientation="horizontal"
                    android:background="@drawable/radius_rectangle"
                    android:id="@+id/infoButtonTimer"
                    android:gravity="center"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:contentDescription="infoButton"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:onClick="gamePause"
                    android:orientation="horizontal"
                    android:background="@drawable/radius_rectangle"
                    android:id="@+id/pauseButtonTimer"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pause_black_24dp"
                        android:contentDescription="pauseButton"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="resetOnClick"
                    android:orientation="horizontal"
                    android:background="@drawable/radius_rectangle"
                    android:id="@+id/resetButtonTimer"
                    android:gravity="center"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_replay_black_24dp"
                        android:contentDescription="pauseButton"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="soundToggle"
                    android:orientation="horizontal"
                    android:background="@drawable/radius_rectangle"
                    android:id="@+id/soundButtonTimer"
                    android:gravity="center"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_volume_up_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="viberToggle"
                    android:orientation="horizontal"
                    android:background="@drawable/radius_rectangle"
                    android:id="@+id/vibeButtonTimer"
                    android:gravity="center"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vibration_black_24dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">


            <!--<View-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"/>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:onClick="fieldClick"
                android:gravity="center"
                android:id="@+id/field3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timerVal"
                    android:textAlignment="center"
                    android:textSize="60dp"
                    android:background="@color/fieldBackground"
                    android:id="@+id/timerValue3"
                    android:layout_weight="5"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/timerValue3"
                    android:id="@+id/playerName3"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
