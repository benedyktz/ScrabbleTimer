<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fullscreen_content"
    android:background="@color/background"
    tools:context="com.benedyktgmail.ziolkowski.scrabbletimer.Timer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:onClick="fieldClick"
            android:gravity="center"
            android:id="@+id/field1"
            android:rotation="180">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timerVal"
                android:textSize="@dimen/timer_font_size"
                android:background="@color/fieldBackground"
                android:id="@+id/timerValue"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/timerValue"
                android:id="@id/playerName1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:onClick="fieldClick"
            android:gravity="center"
            android:id="@+id/field2"
            android:rotation="180">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timerVal"
                android:textSize="@dimen/timer_font_size"
                android:background="@color/fieldBackground"
                android:id="@+id/timerValue2"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/timerValue2"
                android:id="@id/playerName2"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="settings"
                android:orientation="horizontal"
                android:background="@drawable/radius_rectangle"
                android:id="@+id/settingsButtonTimer"
                android:gravity="center"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:contentDescription="@string/reset_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="info"
                android:orientation="horizontal"
                android:background="@drawable/radius_rectangle"
                android:id="@+id/infoButtonTimer"
                android:gravity="center"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_outline_black_24dp"
                    android:contentDescription="@string/info_button"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:onClick="gamePause"
                android:orientation="horizontal"
                android:background="@drawable/radius_rectangle"
                android:id="@+id/pauseButtonTimer"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:contentDescription="@string/pause_button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="resetOnClick"
                android:orientation="horizontal"
                android:background="@drawable/radius_rectangle"
                android:id="@+id/resetButtonTimer"
                android:gravity="center"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_replay_black_24dp"
                    android:contentDescription="@string/reset_button"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="soundToggle"
                android:orientation="horizontal"
                android:background="@drawable/radius_rectangle"
                android:id="@+id/soundButtonTimer"
                android:gravity="center"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:contentDescription="@string/sound_effects"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="viberToggle"
                android:orientation="horizontal"
                android:background="@drawable/radius_rectangle"
                android:id="@+id/vibeButtonTimer"
                android:gravity="center"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vibration_black_24dp"
                    android:contentDescription="@string/vibration_effects"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:onClick="fieldClick"
        android:gravity="center"
        android:id="@+id/field3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timerVal"
            android:textSize="@dimen/timer_font_size"
            android:background="@color/fieldBackground"
            android:id="@+id/timerValue3"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/timerValue3"
            android:id="@+id/playerName3"/>
    </RelativeLayout>
</LinearLayout>
