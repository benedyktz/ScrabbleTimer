<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.benedyktgmail.ziolkowski.scrabbletimer.Timer">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.benedyktgmail.ziolkowski.scrabbletimer.MainActivity"
        android:id="@+id/fullscreen_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/timerVal"
                android:textAlignment="center"
                android:textSize="60dp"
                android:background="#00695C"
                android:id="@+id/timerValue"
                android:onClick="change"
                android:layout_weight="5"
                android:gravity="center"
                android:rotation="180"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/timerVal"
                android:textAlignment="center"
                android:textSize="60dp"
                android:background="#00695C"
                android:id="@+id/timerValue2"
                android:onClick="change"
                android:layout_weight="5"
                android:gravity="center"
                android:rotation="180"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="START"
                android:onClick="gameStart"
                android:id="@+id/startButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:onClick="gameContinue"
                android:id="@+id/continueButton"/>

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="PAUSE"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:onClick="gamePause"/>-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause_black_24dp"
                android:onClick="gamePause"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:onClick="reset"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="vibes"
                android:onClick="viberToggle"
                android:id="@+id/vibeButtonTimer"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sound"
                android:onClick="soundToggle"
                android:id="@+id/soundButtonTimer"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="@string/timerVal"
                android:textAlignment="center"
                android:textSize="60dp"
                android:background="#00695C"
                android:id="@+id/timerValue4"
                android:onClick="change"
                android:gravity="center"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="@string/timerVal"
                android:textAlignment="center"
                android:textSize="60dp"
                android:background="#00695C"
                android:id="@+id/timerValue3"
                android:onClick="change"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
